<Window x:Class="elaphureLink.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:elaphureLink.Wpf"
        xmlns:pages="clr-namespace:elaphureLink.Wpf.Pages"
        mc:Ignorable="d"

        Title="elaphureLink"
        FontFamily="Microsoft YaHei"
        Width="800" Height="450"

        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
        Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"

        ui:ThemeManager.IsThemeAware="True"
        ui:ThemeManager.RequestedTheme="Default"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.IsBackEnabled="False"

        ui:TitleBar.IsIconVisible="True"

        ResizeMode="CanMinimize"
        Closing="Window_ClosingAsync"
>

    <!-- TODO: default theme -->

    <pages:RootPage x:Name="RootPage"/>
</Window>